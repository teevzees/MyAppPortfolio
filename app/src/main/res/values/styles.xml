<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--<style name="AppTheme" parent="android:style/Theme.Material">-->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>

        <!--Why doesn't this work???-->
        <item name="android:navigationBarColor">@color/primary_dark</item>

        <!--<item name="android:statusBarColor">@android:color/holo_orange_dark</item>-->

        <item name="android:colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>

        <item name="android:windowBackground">@android:color/black</item>


        <!--Text Attributes-->
        <item name="android:textSize">16sp</item>
    </style>



    <style name="HeadLine" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_light</item>

    </style>



    <style name="Buttons" parent="Theme.AppCompat">
        <!--<item name="android:layout_width">match_parent</item>-->
        <!--<item name="android:layout_height">wrap_content</item>-->
        <item name="android:layout_margin">6dp</item>
        <!--<item name="android:maxWidth">20dp</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/button_color</item>
        <item name="android:onClick">launchApp</item>
    </style>



    <style name="AccentButton" parent="Buttons">
        <item name="android:background">@color/accent_button_color</item>
        <item name="android:textColor">@color/text_accent</item>
    </style>

</resources>
